<div class="container-fluid" id="diagnosticsContent">
    <!-- Conteúdo de diagnóstico será carregado aqui pelo diagnostics.js -->
    
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h3 class="h5 mb-0">Informações do Sistema</h3>
                </div>
                <div class="card-body">
                    <div id="system-info">
                        <div class="d-flex justify-content-center">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Carregando...</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h3 class="h5 mb-0">Status do Banco de Dados</h3>
                </div>
                <div class="card-body">
                    <div id="database-status">
                        <div class="d-flex justify-content-center">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Carregando...</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h3 class="h5 mb-0">Diagnóstico do WhatsApp</h3>
                </div>
                <div class="card-body">
                    <div id="whatsapp-diagnostics">
                        <div class="d-flex justify-content-center">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Carregando...</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h3 class="h5 mb-0">Status da Sessão</h3>
                </div>
                <div class="card-body">
                    <div id="session-status">
                        <div class="d-flex justify-content-center">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Carregando...</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="h5 mb-0">Logs do Sistema</h3>
            <div>
                <button class="btn btn-sm btn-light me-2" id="refresh-logs">
                    <i class="bi bi-arrow-clockwise"></i> Atualizar
                </button>
                <button class="btn btn-sm btn-light" id="download-logs">
                    <i class="bi bi-download"></i> Baixar Logs
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <div class="btn-group" role="group">
                    <input type="radio" class="btn-check" name="log-type" id="log-all" value="all" checked>
                    <label class="btn btn-outline-primary" for="log-all">Todos</label>
                    
                    <input type="radio" class="btn-check" name="log-type" id="log-error" value="error">
                    <label class="btn btn-outline-primary" for="log-error">Erros</label>
                    
                    <input type="radio" class="btn-check" name="log-type" id="log-info" value="info">
                    <label class="btn btn-outline-primary" for="log-info">Info</label>
                </div>
            </div>
            
            <div class="logs-container bg-light p-3 rounded" style="max-height: 400px; overflow-y: auto;">
                <pre id="logs-content" class="mb-0"><div class="d-flex justify-content-center">
<div class="spinner-border text-primary" role="status">
    <span class="visually-hidden">Carregando...</span>
</div>
</div></pre>
            </div>
            
            <div id="logs-pagination" class="d-flex justify-content-center mt-3">
                <!-- Paginação será inserida via JavaScript -->
            </div>
        </div>
    </div>
</div>
